@model IEnumerable<webapp_ZS.Models.Sale>

@{
    ViewData["Title"] = "Index";
}

<h3>Sipari≈üler</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.customerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.saleCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.saleAdress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.artworks.artworksName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cartPiece)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cartTotalAmount)
            </th>
    
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.customerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saleCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saleAdress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.artworks.artworksName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cartPiece)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cartTotalAmount)
            </td>
        
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="action-link details-link"><i class="fas fa-eye"></i> Detay</a>

            </td>
        </tr>
}
    </tbody>
</table>
