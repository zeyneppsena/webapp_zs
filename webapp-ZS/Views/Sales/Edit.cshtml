<h5>Sale</h5>
<hr />
<div class="row">


    <!-- Second column for the remaining part of the form -->
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="artworksId" class="control-label"></label>
                <select asp-for="artworksId" class="form-control" readonly asp-items="ViewBag.artworksId"></select>
                <span asp-validation-for="artworksId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cartPiece" class="control-label"></label>
                <input asp-for="cartPiece" class="form-control" readonly />
                <span asp-validation-for="cartPiece" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cartTotalAmount" class="control-label"></label>
                <input asp-for="cartTotalAmount" class="form-control" readonly />
                <span asp-validation-for="cartTotalAmount" class="text-danger"></span>
            </div>

        </form>
    </div>

    <!-- First column for half of the form -->
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="customerName" class="control-label"></label>
                <input asp-for="customerName" class="form-control" />
                <span asp-validation-for="customerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="saleCity" class="control-label"></label>
                <input asp-for="saleCity" class="form-control" />
                <span asp-validation-for="saleCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="saleAdress" class="control-label"></label>
                <input asp-for="saleAdress" class="form-control" />
                <span asp-validation-for="saleAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

@if (!User.Identity.IsAuthenticated)
{
    <a asp-action="Index2" asp-route-id="@Model.Id" class="action-link back-button"><i class="fas fa-arrow-left"></i> Geri</a>
}
else if (!User.IsInRole("administrator"))
{
    <a asp-action="Index" class="action-link back-button"><i class="fas fa-arrow-left"></i> Geri</a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
