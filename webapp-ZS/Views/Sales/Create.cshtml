@model webapp_ZS.Models.Sale

@{
    ViewData["Title"] = "Create";
}

<h3>Yeni</h3>

<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="customerName" class="control-label"></label>
                <input asp-for="customerName" class="form-control" />
                <span asp-validation-for="customerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="saleCity" class="control-label"></label>
                <input asp-for="saleCity" class="form-control" />
                <span asp-validation-for="saleCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="saleAdress" class="control-label"></label>
                <input asp-for="saleAdress" class="form-control" />
                <span asp-validation-for="saleAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="artworksId" class="control-label"></label>
                <select asp-for="artworksId" class ="form-control" asp-items="ViewBag.artworksId"></select>
            </div>
            <div class="form-group">
                <label asp-for="cartPiece" class="control-label"></label>
                <input asp-for="cartPiece" class="form-control" />
                <span asp-validation-for="cartPiece" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cartTotalAmount" class="control-label"></label>
                <input asp-for="cartTotalAmount" class="form-control" />
                <span asp-validation-for="cartTotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userIds" class="control-label"></label>
                <input asp-for="userIds" class="form-control" />
                <span asp-validation-for="userIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index" class="action-link back-button"><i class="fas fa-arrow-left"></i> Geri</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
