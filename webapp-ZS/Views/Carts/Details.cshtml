@model webapp_ZS.Models.Cart

@{
    ViewData["Title"] = "Details";
}

<h3>Detay Bilgiler</h3>

<div>
    <h5>Sepet</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cartTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cartTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cartPiece)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cartPiece)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cartTotalAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cartTotalAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.artworks.artworksName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.artworks.artworksName)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Index" class="action-link back-button"><i class="fas fa-arrow-left"></i> Geri</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="action-link edit-link"><i class="fas fa-pencil-alt"></i> Düzenle</a>

    <div class="form-right-align form-full-width">
        <form asp-action="AddSales" method="post" class="action-form">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="action-link buy-link" aria-label="Satın Al">
                <i class="fas fa-dollar-sign"></i> Satın Al
            </button>
        </form>
    </div>


</div>
