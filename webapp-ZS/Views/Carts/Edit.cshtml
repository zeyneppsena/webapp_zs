@model webapp_ZS.Models.Cart

@{
    ViewData["Title"] = "Edit";
}

<h3>Düzenle</h3>

<h5>Sepet</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="artworksId" class="control-label"></label>
                <select asp-for="artworksId" class="form-control" readonly asp-items="ViewBag.artworksId"></select>
                <span asp-validation-for="artworksId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="cartTime" class="control-label"></label>
                <input asp-for="cartTime" class="form-control" readonly />
                <span asp-validation-for="cartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cartPiece" class="control-label"></label>
                <input asp-for="cartPiece" class="form-control" />
                <span asp-validation-for="cartPiece" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cartTotalAmount" class="control-label"></label>
                <input asp-for="cartTotalAmount" class="form-control" readonly />
                <span asp-validation-for="cartTotalAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="action-link back-button"><i class="fas fa-arrow-left"></i> Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
